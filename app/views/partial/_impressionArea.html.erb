<section class="bg-light-gray row-space-top-4 row-space-4">
  <div class="container">
    <div class="col-lg-12 col-xs-12 text-center">
      <div class="container">
        <!-- content -->
        <div class="row" style="padding:10px 0 0 0">
          <!-- main -->
          <div class="col-md-9 col-xs-12">
            <!-- apply custom style -->
            <div class="page-header" style="margin-top:-30px;padding-bottom:0px;">
              <h1><small><%= subtitle %>対するみんなの感想</small></h1>
            </div>
            <% if @impressions.empty? %>
            <h1><small>まだ感想はありません。最初の感想を投稿してみましょう</small></h1>
            <% end %>
            <div  id="loadpage">
              <%= render  "impressions/impression", impressions: @impressions, isShowCommentBtn: true %>
            </div>
            <div class="col-md-9 col-md-offset-2">
              <%= link_to_next_page @impressions, 'もっと見る', remote: true, id: 'more_link' %>          
            </div>
          </div>
          <%= render "partial/relationalDrama" %>
        </div>

      </div>
    </section>