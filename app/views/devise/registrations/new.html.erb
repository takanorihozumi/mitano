<%= render "partial/navbar" %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
     <h2>アカウント作成</h2>

     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <%= render 'partial/deviseErrorMsg' %>
     <hr>
     <%= link_to "Facebookで登録", user_facebook_omniauth_authorize_path, class:"btn btn-facebook" %>
     <hr>
     <div class="form-group">
      <%= f.label :アカウント名 %><br />
      <%= f.email_field :name,:class => 'form-control',:placeholder => "アカウント名", autofocus: true, autocomplete: "email" %>
    </div>
     <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email,:class => 'form-control',:placeholder => "email", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password,:class => 'form-control',:placeholder => "password", autocomplete: "off" %>
    </div>

    <div class="form-group">
      <%= f.label :パスワード確認 %><br />
      <%= f.password_field :password_confirmation,:class => 'form-control',:placeholder => "password_confirmation", autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "アカウント作成" ,class: "btn square_btn" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>       
  </div>
</div>

</div>
<%= render 'partial/footer' %>

